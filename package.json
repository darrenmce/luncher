{
  "name": "react-iso-uni-demo",
  "version": "1.0.0",
  "description": "demoing react router + universal rendering",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean-build && npm run build-client",
    "build-client": "./client/build.js",
    "clean-build": "rimraf ./client/build && mkdirp ./client/build",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "npm run test-server && npm run test-client && npm run lint",
    "test-client": "mocha --opts mocha.opts.client client/test/**/*.js client/test/**/*.jsx",
    "test-server": "mocha --opts mocha.opts.server server/test",
    "watch-dev": "npm run clean-build && npm run watch-build-client -s & npm run watch-dev-server -s",
    "watch-dev-server": "nodemon --watch . --ignore client",
    "watch-build-client": "client/build.js --full-paths --watch"
  },
  "author": "Darren McElligott <darren.mcelligott@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "babel-plugin-transform-class-properties": "^6.5.2",
    "babel-register": "^6.5.2",
    "bluebird": "^3.3.5",
    "bunyan": "^1.7.0",
    "compression": "^1.6.1",
    "express": "^4.13.4",
    "express-bunyan-logger": "^1.2.0",
    "jade": "^1.11.0",
    "lodash": "^4.5.1",
    "rc": "^1.1.6",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "superagent": "^1.8.0-beta.2"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "commander": "^2.9.0",
    "eslint": "^2.2.0",
    "eslint-plugin-react": "^4.1.0",
    "jsdom": "^8.0.4",
    "minimatch": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "react-addons-test-utils": "^0.14.7",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "supertest": "^1.2.0",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  }
}
